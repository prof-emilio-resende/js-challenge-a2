    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch API",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\webapp-api\\index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "program": "${workspaceFolder}\\webapp-frontend\\node_modules\\mocha\\bin\\_mocha",
            "args": [
                "--slow",
                "1000",
                "--colors",
                "${workspaceFolder}\\webapp-frontend\\test\\**\\*.test.js",
              ],
        }
    ]
}